# ======================================
# FLOOD RISK MANAGEMENT BACKEND CONFIG
# ======================================

# ---------- DATABASE CONFIG ----------
MONGODB_URI=mongodb://localhost:27017/flood_risk_db
MONGODB_TEST_URI=mongodb://localhost:27017/flood_risk_test_db

# ---------- JWT CONFIG ----------
JWT_SECRET=flood_risk_management_jwt_secret_key_change_in_production_123456789
JWT_EXPIRE=24h
JWT_REFRESH_SECRET=flood_risk_management_refresh_secret_key_change_in_production_987654321
JWT_REFRESH_EXPIRE=7d

# ---------- SERVER CONFIG ----------
NODE_ENV=development
PORT=5000
API_PREFIX=/api/v1

# ---------- CORS CONFIG ----------
CORS_ORIGIN=http://localhost:3000,http://localhost:3001
CORS_CREDENTIALS=true

# ---------- RATE LIMITING ----------
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# ---------- FILE UPLOAD CONFIG ----------
MAX_FILE_SIZE=5242880
UPLOAD_PATH=./uploads
ALLOWED_FILE_TYPES=image/jpeg,image/png,image/gif,application/pdf,application/vnd.ms-excel,application/vnd.openxmlformats-officedocument.spreadsheetml.sheet

# ---------- EMAIL CONFIG (Optional - for notifications) ----------
EMAIL_FROM=noreply@floodrisk.com
EMAIL_SMTP_HOST=smtp.gmail.com
EMAIL_SMTP_PORT=587
EMAIL_SMTP_SECURE=false
EMAIL_SMTP_USER=your-email@gmail.com
EMAIL_SMTP_PASS=your-app-password

# ---------- LOGGING CONFIG ----------
LOG_LEVEL=info
LOG_FILE=logs/app.log
LOG_MAX_SIZE=10m
LOG_MAX_FILES=5

# ---------- ADMIN DEFAULT ACCOUNT ----------
DEFAULT_ADMIN_USERNAME=admin
DEFAULT_ADMIN_EMAIL=admin@floodrisk.com
DEFAULT_ADMIN_PASSWORD=Admin123!

# ---------- WEATHER API (Optional - for external weather data) ----------
OPENWEATHER_API_KEY=your_openweather_api_key_here
WEATHER_UPDATE_INTERVAL=3600000

# ---------- BACKUP CONFIG ----------
BACKUP_ENABLED=false
BACKUP_INTERVAL=86400000
BACKUP_PATH=./backups
BACKUP_RETENTION_DAYS=30

# ---------- SECURITY CONFIG ----------
BCRYPT_ROUNDS=12
SESSION_TIMEOUT=3600000
MAX_LOGIN_ATTEMPTS=5
LOCKOUT_TIME=900000

# ---------- MONITORING ----------
HEALTH_CHECK_ENABLED=true
METRICS_ENABLED=false
METRICS_PORT=9090

# ---------- CACHE CONFIG ----------
REDIS_ENABLED=false
REDIS_URL=redis://localhost:6379
CACHE_TTL=3600

# ---------- EXTERNAL SERVICES ----------
# ---------- EXTERNAL API KEYS ----------
# Weather API (WeatherAPI.com - Free tier: 1M calls/month)
WEATHER_API_KEY=your_weatherapi_key_here

# Google Maps API (for mapping features)
GOOGLE_MAPS_API_KEY=your_google_maps_api_key

# Mapbox Access Token (for advanced mapping)
MAPBOX_ACCESS_TOKEN=your_mapbox_token

# Open-Elevation API (Free, no API key required)
# Uses: https://api.open-elevation.com

# Vietnam Government APIs (Mock implementation - replace with real endpoints)
# VIETNAM_GOV_API_KEY=your_gov_api_key
# VIETNAM_GOV_BASE_URL=https://api.thongke.gov.vn
MAPBOX_ACCESS_TOKEN=your_mapbox_token
